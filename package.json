{
  "name": "chat",
  "version": "1.0.1",
  "scripts": {
    "start": "npm run build && node server.js",
    "dev": "cross-env NODE_ENV=development webpack serve --config config/development.js",
    "build": "cross-env NODE_ENV=production webpack --config config/production.js",
    "test": "mocha",
    "parcel:build": "parcel build src/index.html --no-cache",
    "parcel:dev": "parcel src/index.html --port 3000 --no-cache",
    "lint:js": "eslint '**/*{.ts,.js}'",
    "lint:css": "stylelint '**/*{.css,.scss}'",
    "prepare": "husky install"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.2",
    "@babel/core": "7.18.5",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@babel/register": "7.17.7",
    "@parcel/config-default": "2.6.2",
    "@parcel/core": "2.6.2",
    "@parcel/transformer-sass": "2.6.2",
    "@types/chai": "4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "chai": "4.3.6",
    "cross-env": "^7.0.3",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "dotenv-webpack": "7.1.1",
    "eslint": "8.12.0",
    "express": "4.17.3",
    "global-jsdom": "8.4.0",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "5.5.0",
    "husky": "^8.0.0",
    "jsdom": "19.0.0",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "mocha": "10.0.0",
    "parcel": "2.6.2",
    "parcel-plugin-handlebars-precompile": "1.0.2",
    "sass-loader": "13.0.1",
    "style-loader": "3.3.1",
    "stylelint": "14.6.1",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-scss": "4.2.0",
    "ts-loader": "9.3.1",
    "ts-node": "^10.8.1",
    "typescript": "4.6.3",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "nanoid": "3.3.2"
  }
}
