<div class="custom-input {{#if this.isInvalid}}is-invalid{{/if}}">
  <label><span class="custom-input__label">{{this.label}}</span>
    <input type="{{this.type}}" id="input-{{this.id}}" name="{{this.name}}" value="{{this.value}}">
  </label>
  <div class="custom-input__error">{{this.error}}</div>
</div>